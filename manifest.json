{
  "manifest_version": 2,
  "name": "Like to Communism",
  "version": "0.2",
  "description": "Replaces Twitter’s “Like” button with a “Communism” button, as Twitter’s creators originally intended",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png"
  },
  "applications": {
    "gecko": {
      "id": "like-to-communism@aanand.prasad"
    }
  },

  "permissions": ["https://twitter.com/*"],

  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "css": ["overrides.css"],
      "js": ["overrides.js"]
    }
  ],

  "web_accessible_resources": ["*.png"]
}
